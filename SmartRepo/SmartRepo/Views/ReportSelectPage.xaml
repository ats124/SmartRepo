<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:my="clr-namespace:Softentertainer.SmartRepo.Views"
             x:Class="Softentertainer.SmartRepo.Views.ReportSelectPage">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Button Grid.Row="0" Text="日報" Command="{Binding DailyCommand}" />
    <my:CalendarView Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
  </Grid>
</ContentPage>