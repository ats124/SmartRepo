<?xml version="1.0" encoding="UTF-8"?>
<ContentView x:Name="RootElement" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Softentertainer.SmartRepo.Views.CalendarView">
  <ContentView.Resources>
    <ResourceDictionary>
      <Color x:Key="CalendarBorderColor">Black</Color>
      <x:Double x:Key="CalendarGridSize">0.5</x:Double>
      <Thickness x:Key="CalendarBorderSize">0.5</Thickness>
      <Color x:Key="CalendarBackgroundColor">White</Color>
    </ResourceDictionary>
  </ContentView.Resources>
  <ContentView.Content>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Label Grid.Row="0" HorizontalOptions="Start">&lt;&lt;</Label>
      <Label Grid.Row="0" HorizontalOptions="Center">Test</Label>
      <Label Grid.Row="0" HorizontalOptions="End">&gt;&gt;</Label>
      <BoxView Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="{StaticResource CalendarBorderColor}" />
      <Grid x:Name="CalendarDaysGrid" Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="{StaticResource CalendarBorderColor}" 
            ColumnSpacing="{StaticResource CalendarGridSize}" RowSpacing="{StaticResource CalendarGridSize}" Margin="{StaticResource CalendarBorderSize}"/>
    </Grid>
  </ContentView.Content>
</ContentView>
